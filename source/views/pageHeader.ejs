<!DOCTYPE html>
<html>
  <head>
    <title>Bridge: Twitter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" media="screen">
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
      #pryvButton{
        position:absolute;
        right:0px;
        width:130px;
      }
    </style>
    <script type="text/javascript" src="https://sw.rec.la:2443/access/v0/pryv-access-sdk.js"></script>
  </head>
  <body>

    <script>
      /**
       * process the form and request access
       */
        var requestedPermissions = [
                                    {
                                      "channelId" : "diary",
                                      "defaultName" : "Diary",
                                      "level" : "read",
                                      "folderPermissions" : [
                                        {
                                          "folderId" : "social-twitter",
                                          "level" : "manage",
                                          "defaultName" : "Twitter"
                                        }
                                      ]
                                    }
                                  ];
        
        // ----------------------- //
        var settings = {
          requestingAppId : 'test-demo-access',
          requestedPermissions : requestedPermissions,
          returnURL : 'auto#', // set this if you don't want a popup
          spanButtonID : 'pryvButton', // (optional)
          callbacks : {
            initialization : function() { },
            needSignin : function(popupUrl, pollUrl, pollRateMs) { },
            needValidation : function(popupUrl, pollUrl, pollRateMs) {},
            accepted : function(username, appToken, languageCode) {
              console.log("** SUCCESS! username:" + username + 
                          " appToken:" + appToken + 
                          " lang:" + languageCode);
            },
            refused: function(reason) {
              console.log("** REFUSED! " + reason);
            },
            error: function(code, message) {
              console.log("** ERROR! " + code + " " + message);
            }
          }
        };
        
   
        pryvAccess.setup(settings);
    </script>